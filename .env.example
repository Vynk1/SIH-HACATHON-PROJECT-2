# ===========================================
# SWASTHYA HEALTH CARD - ENVIRONMENT CONFIG
# ===========================================

# Server Configuration
NODE_ENV=production
PORT=5000

# Frontend Configuration (for CORS)
FRONTEND_URL=https://your-frontend-domain.com
# For development: http://localhost:3000

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# MongoDB Atlas Connection (Recommended for production)
MONGO_URI=mongodb+srv://<username>:<password>@<cluster-name>.mongodb.net/
MONGO_DB=swasthya_health_card

# Alternative: Local MongoDB (for development)
# MONGO_URI=mongodb://localhost:27017/swasthya_health_card

# ===========================================
# SECURITY & AUTHENTICATION
# ===========================================
# JWT Configuration (CHANGE IN PRODUCTION!)
JWT_SECRET=your_super_secure_jwt_secret_key_minimum_32_characters_long
JWT_EXPIRES=7d

# Session Secret (if using sessions)
SESSION_SECRET=your_super_secure_session_secret_key

# ===========================================
# THIRD-PARTY SERVICES
# ===========================================
# Cloudinary Configuration (for file uploads)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# ===========================================
# RATE LIMITING & SECURITY
# ===========================================
# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# CORS Configuration
CORS_ORIGIN=https://your-frontend-domain.com
# For development: http://localhost:3000

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs/
MAX_LOG_SIZE=10m
MAX_LOG_FILES=5

# ===========================================
# MONITORING & ALERTING
# ===========================================
# Application Monitoring
SENTRY_DSN=your_sentry_dsn_for_error_tracking

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000

# ===========================================
# EMAIL CONFIGURATION (if needed)
# ===========================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-specific-password
EMAIL_FROM=noreply@swasthya.com

# ===========================================
# BACKUP & RECOVERY
# ===========================================
BACKUP_ENABLED=true
BACKUP_INTERVAL=daily
BACKUP_RETENTION_DAYS=30

# ===========================================
# DEVELOPMENT SPECIFIC (remove in production)
# ===========================================
DEBUG_MODE=false
ENABLE_SWAGGER=false